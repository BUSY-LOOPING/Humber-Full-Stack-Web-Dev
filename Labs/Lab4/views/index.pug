doctype html
html
  head
    title Movie List
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    .container.mt-5
      h1 Movie List

      if movies.length
        table.table.table-striped
          thead
            tr
              th Title
              th Year
              th Rating
          tbody
            each movie in movies
              tr
                td= movie.title
                td= movie.year
                td= movie.rating
      else
        p.text-muted No movies found.
