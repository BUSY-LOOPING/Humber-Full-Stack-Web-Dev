extends layout

block layout-content
    h1 Add menu link
    form(action="/admin/menu/add/submit", method="POST")
        //-weight field
        div
            label(for="wgt") Weight:
            input(type="number", name="weight", id="wgt", placeholder="0")
        //- name field
        div
            label(for="link-text") Link Text:
            input(type="text", name="name", id="link-text", placeholder="Home")
        //- path field
        div
            label(for="href") URI:
            input(type="text", name="path", id="href", placeholder="e.g. /")
        button(type="submit") Add link